{
  "version": 2,
  "functions": {
    "api/mail.php": {
      "runtime": "vercel-php@0.7.3"
    }
  },
  "builds": [
    {
      "src": "api/mail.php",
      "use": "@vercel/php",
      "config": {
        "includeFiles": ["vendor/**", "composer.json", "composer.lock"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/mail",
      "methods": ["POST"],
      "dest": "/api/mail.php"
    }
  ]
}